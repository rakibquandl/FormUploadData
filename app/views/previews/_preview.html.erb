<% if @preview.error_message.size > 0 %>
   <br>
  <pre><b><p>Error : <%=@preview.error_message %></p></b></pre>
<% else %>
    <p><b>Source : </b><%= @preview.source_name %></p>
    <p><b>Dataset Code : </b><%= @preview.dataset_code %></p>
    <p><b>Dataset Name : </b><%=@preview.dataset_name %></p>
    <p><b>Description : </b><%=@preview.dataset_description %></p>

    <table class="table table-striped table-bordered">
      <% @preview.preview_table.split("\n").each_with_index do |t,i| %>
          <% if i == 0 %>
              <% t.split(",").each do |d| %>
                  <th><%=d  %> </th>
              <% end %>
          <% else %>
              <tr>
                <% t.split(",").each do |d| %>
                    <td><%= d %></td>
                <% end %>
              </tr>
          <% end %>
      <% end %>
    </table>

 <%end %>
